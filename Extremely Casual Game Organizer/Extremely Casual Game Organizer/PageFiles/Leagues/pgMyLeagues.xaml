<Page x:Class="Extremely_Casual_Game_Organizer.PageFiles.Leagues.pgMyLeagues"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Extremely_Casual_Game_Organizer.PageFiles.Leagues"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      Title="My Leagues">

    <Grid>
        <Grid Background="#eeee">
            <Grid.RowDefinitions>
                <RowDefinition Height="45"/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" HorizontalContentAlignment="Center" FontWeight="Bold" 
               FontSize="22" Height="45" VerticalAlignment="Bottom">My Leagues</Label>
            <DataGrid x:Name="datLeagues" IsReadOnly="True" Focusable="False" Margin="0,46,0,-230.4" MouseDoubleClick="datLeagues_MouseDoubleClick"/>
        </Grid>
    </Grid>
</Page>
