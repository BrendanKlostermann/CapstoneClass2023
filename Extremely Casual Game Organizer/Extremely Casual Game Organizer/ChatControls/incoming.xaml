<UserControl x:Class="Extremely_Casual_Game_Organizer.ChatControls.incoming"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Extremely_Casual_Game_Organizer.ChatControls"
             mc:Ignorable="d" Height="98.715" Width="487.36">
    <Grid>
        <Image x:Name="imgUser" HorizontalAlignment="Left" Height="47" VerticalAlignment="Top" Width="57" Margin="10,26,0,0" Source="/Extremely Casual Game Organizer;component/unknow.jpg" Stretch="Fill"/>
        <StackPanel HorizontalAlignment="Left" Margin="87,0,0,0" VerticalAlignment="Center" Background="#FF3B7FF7">
            <TextBlock x:Name="lblMessage" TextWrapping="Wrap" Foreground="White" Margin="0" FontSize="16" Background="#FFD78900" HorizontalAlignment="Left" ScrollViewer.HorizontalScrollBarVisibility="Auto" Padding="5"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Left" Margin="87,0,0,0" VerticalAlignment="Bottom">
            <TextBlock x:Name="lblDate" TextWrapping="Wrap" Foreground="{DynamicResource {x:Static SystemColors.ActiveCaptionTextBrushKey}}" Margin="0" HorizontalAlignment="Left" ScrollViewer.HorizontalScrollBarVisibility="Auto" Padding="5"/>
        </StackPanel>
    </Grid>
</UserControl>
