<UserControl x:Class="Extremely_Casual_Game_Organizer.ChatControls.member"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Extremely_Casual_Game_Organizer.ChatControls"
             mc:Ignorable="d" Height="52" Width="450">
    <Grid Background="White">
        <Image x:Name="imgUser" HorizontalAlignment="Left" Height="47" VerticalAlignment="Top" Width="57" Margin="10,1,0,0" Source="/Extremely Casual Game Organizer;component/unknow.jpg" Stretch="Fill"/>
        <StackPanel HorizontalAlignment="Left" Margin="87,0,0,0" VerticalAlignment="Center">
            <TextBlock x:Name="lblMember" TextWrapping="Wrap" Foreground="Black" Margin="0" FontSize="14" HorizontalAlignment="Left" ScrollViewer.HorizontalScrollBarVisibility="Auto" Padding="5" RenderTransformOrigin="-0.35,-5.5" Width="249"/>
        </StackPanel>
        <Button x:Name="btnSelect" Content="Select" HorizontalAlignment="Left" Margin="366,12,0,0" Width="75" Height="29" Background="#FF111AC9" Foreground="White" VerticalAlignment="Top" RenderTransformOrigin="0.56,-0.276" Click="btnSelect_Click"/>
    </Grid>
</UserControl>
