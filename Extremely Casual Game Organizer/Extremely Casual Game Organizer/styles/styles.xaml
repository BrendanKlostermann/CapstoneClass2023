<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <!-- Base Colors -->
    <Color x:Key="ColorBackground">#EEEEEE</Color>
    <Color x:Key="ColorButton">#BBBBBB</Color>
    <Color x:Key="ColorBanner">#333333</Color>
    <!-- End Base Colors -->

    <!-- Default Styles -->
    
    <Style TargetType="Button" x:Key="rscDefaultButton">
        <Setter Property="Background">
            <Setter.Value>
                <Brush>#BBBBBB</Brush>
            </Setter.Value>
        </Setter>
        <Setter Property="Foreground">
            <Setter.Value>
                <Brush>red</Brush>
            </Setter.Value>
        </Setter>
    </Style>



</ResourceDictionary>