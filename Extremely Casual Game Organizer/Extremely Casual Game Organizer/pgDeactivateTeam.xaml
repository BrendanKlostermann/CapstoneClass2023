<Page x:Class="Extremely_Casual_Game_Organizer.pgDeactivateTeam"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Extremely_Casual_Game_Organizer"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="pgDeactivateTeam">

    <Grid>

        
        
        
        <StackPanel Margin="10,10,5,9.6" Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}">
            <Label x:Name="lblTeamTitle" Content="My Teams" Margin="10,10,10,0" FontSize="20" Foreground="Black" VerticalAlignment="Top" HorizontalContentAlignment="Center" FontWeight="Bold"/>
            <DataGrid x:Name="datTeamList" Height="324" Margin="0,0,0,0" Loaded="datTeamList_Loaded" IsReadOnly="True" SelectionMode="Single"/>
            <Button x:Name="btnDeactivateTeam" Content="Deactivate Team" Height="31" Margin="207,8,207,0" Width="110" Background="White" HorizontalAlignment="Center" FontSize="14" Click="btnDeactivateTeam_Click"/>
        </StackPanel>
        
        
        
    </Grid>
</Page>