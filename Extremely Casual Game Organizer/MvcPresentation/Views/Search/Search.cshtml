@model IEnumerable<DataObjects.TeamSport>

@{
    ViewBag.Title = "Search";
}

<h2>Search</h2>
<h1>@ViewBag.Message</h1>

<p>
    <a href="~/Teams/CreateTeam" class="btn btn-success">Create a Team</a>
</p>

<div class="container">
    <div class="row" style="display:flex;flex-direction:column;align-items:center;">
        <div class="col-md-8" style="padding:10px 10px 0px;">

            <div>
                <form method="POST" action="~/Search/Search">
                    <table class="table" style="border: none">
                        <tr>
                            <th>

                                <label for="teamname">Sport:</label>
                            </th>
                            <th>

                                <label for="teamname">Search:</label>
                            </th>
                            <th></th>
                        </tr>
                        <tr>
                            <td>
                                <select name="sport" class="form-control">
                                    <option></option>
                                    @foreach (var item in ViewBag.sports)
                                    {
                                        if (ViewBag.sport == item)
                                        {
                                            <option selected value="@Html.DisplayFor(modelItem => item)">
                                                @Html.DisplayFor(modelItem => item)
                                            </option>
                                        }
                                        else
                                        {
                                            <option value="@Html.DisplayFor(modelItem => item)">
                                                @Html.DisplayFor(modelItem => item)
                                            </option>
                                        }
                                    }
                                </select>
                            </td>
                            <td>
                                <input class="form-control" placeholder="Type a team"
                                       name="teamname" id="teamname" value="@ViewBag.teamname"/>
                            </td>
                            <td>
                                <input value="Search" type="submit" class="btn btn-success" />
                            </td>
                        </tr>
                    </table>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row" style="display:flex;flex-direction:column;align-items:center;">

    @foreach (var item in Model)
    {
        <div class="col-md-6">
            <a class="noDecoration" href="@item.Description@ViewBag.png" style="display: flex; flex-direction: row; justify-content:start; align-items:center;
                background-color: #F0F0F0; padding:10px 20px; margin-top:5px">
                <img src="~/Images/@item.Description@ViewBag.png"
                     alt="Profile Picture" class="img-circle img-fluid img-responsive text-center"
                     width="70" style="height:70px" />

                <div style="padding: 0px 20px">
                    <p style="font-size:1.5em;">
                        @Html.DisplayFor(modelItem => item.Name)
                    </p>
                    <span style="color:black">@Html.DisplayFor(modelItem => item.Description)</span>
                </div>
            </a>
        </div>
    }

</div>
