@model IEnumerable<DataObjects.Member>

@{
    ViewBag.Title = "PeopleITexted";
}

<div style="padding:10px 0px 0px">
    <h2>Messages</h2>
    <a class="btn btn-success" href="~/Messages/AllMembers">Add user</a>


    @try
    {
        <div class="row" style="padding:0px 0px 120px; margin:25px 0px;height:75vh; overflow-y:auto;">
            @foreach (var item in Model)
            {
                <div class="col-lg-12">
                    <a href="/Messages?email=@item.Email" class="noDecoration" style="display: flex; flex-direction: row; justify-content:start; align-items:center;
                background-color: #E9E9E9; padding:10px; margin-top:5px">
                        @if (@item.Photo != null)
                        {
                            <img id="image-preview" name="image" src="@item.Photo"
                                 alt="Profile Picture" class="img-circle img-fluid img-responsive text-center"
                                 style="height:80px; max-width:100px;" />
                        }
                        else
                        {
                            <img src="~/Images/unknow.jpeg"
                                 alt="Profile Picture" class="img-circle img-fluid img-responsive text-center" width="70"
                                 style="height:80px; max-width:100px;" />
                        }

                        <p style="font-size:2em;padding: 0px 20px">
                            @Html.DisplayFor(modelItem => item.FirstName)
                            @Html.DisplayFor(modelItem => item.FamilyName)
                        </p>
                    </a>
                </div>
            }
        </div>
    }
    catch (Exception)
    {
        <div class="alert alert-danger">
            <h3>The list is empty!</h3>
        </div>
    }
</div>