@model DataObjects.Tournament

@{
    ViewBag.Title = "EditTournaments";
}


@try
{
    <div class="row">
        <div class="col-12" style="padding:15px 30px 30px; margin:30px 0px">
            <h2>Edit a Tournament</h2>
            <a class="btn btn-success btn-lg" href="~/Tournaments/AllTournaments">View All tournaments</a>

            <div style="margin-top:10px">
                @if (@ViewBag.Message != null)
                {
                    if (ViewBag.Error == false)
                    {
                        <div class="alert alert-success">
                            <h5>@ViewBag.Message</h5>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-danger">
                            <h5>@ViewBag.Message</h5>
                        </div>
                    }
                }
            </div>

        </div>
        <div class="col-12 bg-primary" style="padding:30px; margin-bottom:30px; background-color:#F0F0F0">
            <div class="row" style="display:flex; justify-content:center;">

                <div class="col-md-5" style="padding:50px 20px 30px; background-color:white;color:black">
                    <h2 style="text-align:center">Tournament</h2>

                    <form class="form" method="post" action="~/Tournaments/EditTournaments">
                        <input value="@Model.TournamentID" name="id" hidden/>

                        @*@Html.AntiForgeryToken()*@
                        <div style="padding:5px 0px">
                            <div style="padding:0px 20px 0px">
                                <h4 for="description">Name:</h4>
                            </div>
                            <div style="padding:10px 20px">
                                <input value="@Model.Name" name="name" type="text" class="form-control" style="width: 100%; max-width: 100%;" />
                            </div>
                        </div>

                        <div style="padding:5px 0px">
                            <div style="padding:0px 20px 0px">
                                <h4 for="description">Sport:</h4>
                            </div>
                            <div style="padding:10px 20px">
                                <select name="sportname" class="form-control" style="width: 100%; max-width: 100%;">
                                    <option></option>
                                    @foreach (var item in ViewBag.sports)
                                    {
                                        if (item == ViewBag.sportname)
                                        {
                                            <option selected value="@Html.DisplayFor(modelitem => item)">
                                                @Html.DisplayFor(modelitem => item)
                                            </option>
                                        }
                                        else
                                        {
                                            <option value="@Html.DisplayFor(modelitem => item)">
                                                @Html.DisplayFor(modelitem => item)
                                            </option>
                                        }

                                    }
                                </select>
                            </div>
                        </div>

                        <div style="padding:5px 0px">
                            <div style="padding:0px 20px 0px">
                                <h4 for="description">Gender:</h4>
                            </div>
                            <div style="padding:10px 20px">
                                <select name="gender" class="form-control" style="width: 100%; max-width: 100%;">
                                    <option></option>
                                    @if (@Model.Gender == true)
                                    {
                                        <option selected value="true">Male</option>
                                        <option value="false">Female</option>
                                    }
                                    else
                                    {
                                        <option value="true">Male</option>
                                        <option selected value="false">Female</option>
                                    }
                                </select>
                            </div>
                        </div>

                        <div style="padding:5px 0px">
                            <div style="padding:0px 20px 0px">
                                <h4 for="description">Description:</h4>
                            </div>
                            <div style="padding:10px 20px">
                                <textarea class="form-control" rows="5" name="description" style="width: 100%; max-width: 100%;">@Model.Description</textarea>
                            </div>
                        </div>

                        <div style="display:flex; justify-content:center">
                            <div class="col-md-5" style="padding:15px 0px">
                                <input type="submit" class="btn btn-block btn-success" value="Submit" />
                            </div>
                        </div>

                    </form>

                </div>

            </div>

        </div>
    </div>

}
catch (Exception)
{
    <div class="alert alert-danger">
        An error has occurred!
    </div>
}
