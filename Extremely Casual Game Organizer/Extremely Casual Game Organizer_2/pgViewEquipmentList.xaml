        <Label Content="Name" HorizontalAlignment="Left" Margin="47,124,0,0" VerticalAlignment="Top" RenderTransformOrigin="0,0" FontSize="18"/>
        <Label Content="Sport" HorizontalAlignment="Left" Margin="339,124,0,0" VerticalAlignment="Top" RenderTransformOrigin="0,0" FontSize="18"/>
        <Label Content="Actions" HorizontalAlignment="Left" Margin="625,124,0,0" VerticalAlignment="Top" RenderTransformOrigin="0,0" FontSize="18"/>
        <Label Content="Quantity" HorizontalAlignment="Left" Margin="485,124,0,0" VerticalAlignment="Top" RenderTransformOrigin="0,0" FontSize="18"/>
        <TextBox x:Name="txtSearch" HorizontalAlignment="Left" Height="31" Margin="117,84,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="408" FontSize="16" KeyUp="Blur"/>
        <Label Content="Search:" HorizontalAlignment="Left" Margin="34,84,0,0" VerticalAlignment="Top" FontSize="16" Width="78"/>

    </Grid>
</Page>
