      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Extremely_Casual_Game_Organizer"
      mc:Ignorable="d" d:DesignWidth="800"
      Title="pgViewEquipmentList" Height="588.793">

    <Grid>
        <Label x:Name="lblEquipmentList" Content="View Equipment List" HorizontalAlignment="Left" Margin="29,31,0,0" VerticalAlignment="Top" RenderTransformOrigin="0,0" FontSize="24" FontWeight="Bold"/>
        <Label x:Name="txtTeam" Content="Team: Lakers" HorizontalAlignment="Left" Margin="27,7,0,0" VerticalAlignment="Top" RenderTransformOrigin="0,0" FontSize="18"/>
        <ListBox x:Name="lbEquipmentList" HorizontalAlignment="Left" Height="407" Margin="27,163,0,0" VerticalAlignment="Top" Width="747" FontSize="14" Background="{DynamicResource {x:Static SystemColors.ScrollBarBrushKey}}"/>
